<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputTransactionActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_label"
        android:text="Add Transaction"
        android:textSize="25dp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="85dp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/btn_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="18dp"
        android:layout_marginBottom="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_label_target"
        android:text="Target Transaction"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_label"
        />

    <EditText
        android:id="@+id/et_target"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rounded_box_2"
        android:textColor="#ffffff"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_label_target"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_label_amount"
        android:text="Amount"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_target"
        />

    <EditText
        android:id="@+id/et_amount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rounded_box_2"
        android:textColor="#ffffff"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="8dp"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_label_amount"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_label_img_id"
        android:text="Image Id"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_amount"
        />

    <EditText
        android:id="@+id/et_img_id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rounded_box_2"
        android:textColor="#ffffff"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="8dp"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_label_img_id"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_add"
        android:text="Add"
        android:layout_marginTop="45dp"
        android:layout_marginHorizontal="75dp"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_img_id"


        />

</androidx.constraintlayout.widget.ConstraintLayout>